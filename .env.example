# ============================================================================
# FEATURE FLAGS (Development & Rollout Control)
# ============================================================================
# Boolean flags to enable/disable features safely

# Enable console logging in production (DEFAULT: false for security)
# Used by: Debug logging, development troubleshooting
# SECURITY: Keep false in production
VITE_ENABLE_CONSOLE_LOGGING=false

# Enhanced error handling and reporting (DEFAULT: true)
# Used by: Error boundaries, improved error messages
# SAFETY: Additive feature, safe to enable
VITE_ENHANCED_ERROR_HANDLING=true

# Safe database query patterns (DEFAULT: true)
# Used by: Database query safety, SQL injection prevention
# SAFETY: Replaces unsafe patterns, safe to enable
VITE_SAFE_DATABASE_QUERIES=true

# TypeScript type safety improvements (DEFAULT: true)
# Used by: Compile-time type checking, development safety
# SAFETY: Compile-time only, safe to enable
VITE_TYPE_SAFETY_IMPROVEMENTS=true

# Sequential unlock system for learning modules (DEFAULT: false)
# Used by: Learning progression, module dependencies
# IMPACT: Changes learning flow, test before enabling
VITE_LMS_SEQUENTIAL_UNLOCK=false

# Database migration for single queries (DEFAULT: false)
# Used by: Database optimization, query safety
# IMPACT: Changes query patterns, test thoroughly
VITE_MIGRATE_SINGLE_QUERIES=false

# Database error boundaries (DEFAULT: false)
# Used by: Error recovery, graceful degradation
# IMPACT: Changes error handling, test error scenarios
VITE_ENABLE_DATABASE_ERROR_BOUNDARIES=false

# Safe query fallbacks (DEFAULT: false)
# Used by: Query failure recovery, backup query paths
# IMPACT: Changes query behavior, test failure scenarios
VITE_SAFE_QUERY_FALLBACKS=false

# Console logging migration (DEFAULT: false)
# Used by: Logging system migration, debug improvements
# IMPACT: Changes logging behavior, test in development
VITE_MIGRATE_CONSOLE_LOGS=false

# Preserve debug logs in migration (DEFAULT: true)
# Used by: Debug information retention, troubleshooting
# SAFETY: Preserves existing functionality
VITE_PRESERVE_DEBUG_LOGS=true

# Replace window.reload with safer navigation (DEFAULT: false)
# Used by: Navigation safety, state preservation
# IMPACT: Changes page refresh behavior, test thoroughly
VITE_REPLACE_WINDOW_RELOAD=false

# Enable real recovery rate calculations (DEFAULT: false)
# Used by: Accurate analytics, financial reporting
# IMPACT: Changes analytics calculations, verify accuracy
VITE_ENABLE_REAL_RECOVERY_RATE=false

# Database query optimization (DEFAULT: false)
# Used by: Performance improvements, query efficiency
# IMPACT: Changes query patterns, test performance impact
VITE_OPTIMIZE_DATABASE_QUERIES=false

# Enhanced loading states (DEFAULT: false)
# Used by: Better UX, loading indicators
# IMPACT: Changes UI behavior, test user experience
VITE_ENHANCED_LOADING_STATES=false

# Strict TypeScript type checking (DEFAULT: false)
# Used by: Development safety, type validation
# IMPACT: May break existing code, test thoroughly
VITE_STRICT_TYPE_CHECKING=false

# Runtime type validation (DEFAULT: false)
# Used by: Data validation, runtime safety
# IMPACT: Adds validation overhead, test performance
VITE_RUNTIME_TYPE_VALIDATION=false

